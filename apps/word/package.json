{
  "name": "@workspace/word",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "inject-manifest": "rm -rf ~/Library/Containers/com.microsoft.Word/Data/Documents/wef/*.manifest.xml && cp ./manifest.xml ~/Library/Containers/com.microsoft.Word/Data/Documents/wef/\"$(uuidgen).manifest.xml\"",
    "validate": "office-addin-manifest validate ./manifest.xml",
    "predev": "npm run inject-manifest",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "enable-debugger:word": "defaults write com.microsoft.Word OfficeWebAddinDeveloperExtras -bool true && defaults write com.microsoft.Word OfficeAddinDebuggerEnabled -bool true",
    "disable-debugger:word": "defaults delete com.microsoft.Word OfficeWebAddinDeveloperExtras && defaults delete com.microsoft.Word OfficeAddinDebuggerEnabled"
  },
  "dependencies": {
    "@microsoft/office-js": "^1.1.110",
    "@workspace/ui": "*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/office-js": "^1.0.520",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "office-addin-manifest": "^2.0.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-static-copy": "^3.1.1"
  }
}
